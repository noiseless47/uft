# Football Squad Selection - Environment Variables Template
# Copy this file to .env and fill in your actual values

# MLflow Configuration
MLFLOW_TRACKING_URI=file:./experiments/mlflow
MLFLOW_EXPERIMENT_NAME=football-squad-selection

# Data Source API Keys (Optional - for commercial data)
OPTA_API_KEY=your_opta_api_key_here
WYSCOUT_API_KEY=your_wyscout_api_key_here
INSTAT_API_KEY=your_instat_api_key_here

# Database Configuration (if using external tracking)
DATABASE_URL=sqlite:///experiments/tracking.db

# Compute Configuration
N_JOBS=8
OMP_NUM_THREADS=4
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log

# Development Settings
DEBUG_MODE=false
FAST_DEMO=false
DRY_RUN=false

# Paths (usually don't need to change)
DATA_PATH=data/
ARTIFACTS_PATH=artifacts/
EXPERIMENTS_PATH=experiments/

# Performance Tuning
BATCH_SIZE=1000
MEMORY_LIMIT=8GB
TIMEOUT_SECONDS=3600

# External Services (Optional)
WANDB_API_KEY=your_wandb_key_here
NEPTUNE_API_TOKEN=your_neptune_token_here
